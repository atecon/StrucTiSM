function void STSM_printout (bundle *self)
    /* */

    scalar mapping = self.mapping
    scalar has_exog = self.nexog > 0
    #trend = self.trend
    #slope = self.slope
    #seasonal = self.seasonal

    strings plabs = parlabels(self.error_in_obseq, trend, slope,\
                              seasonal, has_exog)
    if self.nexog > 0
        plabs += strsplit(strsub(self.xnames,","," "))
    endif

    printf "\nStructural model for %s, %s (T = %d)\n",\
        self.depvarname, self.sample_string, self.T)

    if self..special_case_id
        printf "Estimation carried out via OLS."
    else
        cf = self.coeff ~ sqrt(diag(self.vcv))
        # k = rows(cf)
        modprint cf plabs
        # maps = defarray("Variances", "Std. Dev", "log")
        # printf "mapping = %s, scale = %g\n", maps[mapping+1],\
        #   self.y_scaling_factor

        printf "Average log-likelihood = %g\n", meanc(self.llt)
    endif

    printf "\n\nSpecification:\n\n%s\n\n", \
      specification(self.error_in_obseq, trend, slope, seasonal)

end function

